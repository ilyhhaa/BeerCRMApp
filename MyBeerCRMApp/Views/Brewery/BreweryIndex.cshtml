@model IEnumerable<MyBeerCRMApp.Models.Brewery>

<h2>Список пользователей</h2>
<p><a asp-action="createBreweries">Добавить пивоварню</a></p>
<table class="table">
    <tr><th>Идентификационный номер</th><th>Название пивоварни</th><th>Описание пивоварни</th></tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Description</td>

            <td> 
                <a asp-action="EditBreweries" asp-controller = "Brewery" asp-route-id="@item.Id">Изменить</a>

            </td>
            <td>
                <form asp-controller="Brewery" asp-action="DeleteBreweries" method="post" asp-route-id="@item.Id">
                    <input type="submit" value="Удалить"/>

                </form>
                
            </td>

        </tr>
    }
</table>