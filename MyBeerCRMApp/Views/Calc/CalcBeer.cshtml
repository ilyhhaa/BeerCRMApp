@model MyBeerCRMApp.Models.CalcModel

<h2>Продаем пиво</h2>

<form asp-asp-controller="Calc" asp-action="CalcBeer">

    <p>
        <label asp-for="Price">Цена</label><br />
        <input type="number" step="0.01" min="0.01" asp-for="Price" />
    </p>

    <p>
        <label asp-for="Volume">Объем пива</label><br />
        <input type="number" step="0.01" min="0.01" asp-for="Volume" />
    </p>

   
    <p>
        <input type="submit" value="Рассчитать" />
      
    </p>


</form>

<form asp-controller="Calc" asp-action="ChangeCalc">
    <p>
        <label asp-for="Cash">Наличные</label><br />
        <input type="number" step="0.01" min="0.01" asp-for="Cash" />
    </p>

</form>